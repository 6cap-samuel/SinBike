<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.WalletPage"
    android:orientation="vertical"
    android:background="@drawable/backgroundwallet">

    <Button
        android:id="@+id/wallet_backBtn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/back"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="95dp"
        android:layout_marginStart="150dp"
        android:background="@drawable/wallet"
        android:contentDescription="@string/desc" />
    <Space
        android:layout_width="1dp"
        android:layout_height="15dp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/wallet_nav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/signupColour"
        app:menu="@menu/wallet_nav_items">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <FrameLayout
        android:id="@+id/wallet_cont"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>


</LinearLayout>